<Window
    Icon="/Assets/avalonia-logo.ico"
    Title="AvaloniaApplication"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="AvaloniaApplication.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaloniaApplication.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>

        <!--  Header  -->
        <StackPanel Background="Bisque" DockPanel.Dock="Top">
            <TextBlock
                FontSize="24"
                HorizontalAlignment="Center"
                Padding="20"
                Text="Content" />
        </StackPanel>

        <!--  Footer  -->
        <StackPanel Background="DarkSlateGray" DockPanel.Dock="Bottom">
            <TextBlock
                FontSize="24"
                HorizontalAlignment="Center"
                Padding="10"
                Text="Footer" />
        </StackPanel>

        <!--  Sidebar  -->
        <StackPanel
            Background="SlateGray"
            DockPanel.Dock="Left"
            Width="200">
            <Button
                Content="Home"
                HorizontalAlignment="Center"
                Margin="5"
                Width="70" />
            <Button
                Content="About"
                HorizontalAlignment="Center"
                Margin="5"
                Width="70" />
            <Button
                Content="Settings"
                HorizontalAlignment="Center"
                Margin="5"
                Width="75" />
        </StackPanel>

        <!--  Main Content  -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Title section  -->
            <TextBlock FontSize="20" Text="Informations" />


            <!--  Content  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Background="DarkGray" Margin="5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Text="Statistics"
                        VerticalAlignment="Center" />
                </Border>


                <Border
                    Background="DarkGray"
                    Grid.Column="1"
                    Margin="5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Text="Statistics"
                        VerticalAlignment="Center" />
                </Border>

                <Border
                    Background="DarkGray"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Margin="5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Text="Recent Activities"
                        VerticalAlignment="Center" />
                </Border>
            </Grid>
        </Grid>


    </DockPanel>


</Window>
