<Window
    Icon="/Assets/avalonia-logo.ico"
    Title="crud_application"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="crud_application.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:crud_application.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto, Auto, Auto" Margin="10">

        <Grid
            ColumnDefinitions="Auto, *"
            ColumnSpacing="10"
            Margin="10"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
            RowSpacing="10">

            <TextBlock Text="First Name" VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Text="{Binding FirstName}"
                Watermark="Enter first name" />

            <TextBlock
                Grid.Row="1"
                Text="Last Name"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                Text="{Binding LastName}"
                Watermark="Enter last name" />

            <TextBlock
                Grid.Row="2"
                Text="Email"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                Text="{Binding Email}"
                Watermark="Enter email" />

            <TextBlock
                Grid.Row="3"
                Text="Phone Number"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="3"
                Text="{Binding PhoneNumber}"
                Watermark="Enter phone number" />

            <TextBlock
                Grid.Row="4"
                Text="City Name"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="4"
                Text="{Binding City}"
                Watermark="Enter city name" />

            <TextBlock
                Grid.Row="5"
                Text="Address"
                VerticalAlignment="Center" />
            <TextBox
                Grid.Column="1"
                Grid.Row="5"
                Text="{Binding Address}"
                Watermark="Enter address" />

            <StackPanel
                Grid.Column="1"
                Grid.Row="6"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Command="{Binding SaveCustomerCommand}"
                    Content="{Binding SaveBtnState}"
                    HorizontalContentAlignment="Center"
                    Width="70" />
                <Button Command="{Binding DeleteCustomerCommand}" Content="Delete" />
                <Button Command="{Binding ClearFieldsCommand}" Content="Clear" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="1">
            <Button
                Command="{Binding RefreshCustomersCommand}"
                Content="Refresh"
                Grid.Column="2" />
            <StackPanel IsVisible="{Binding IsLoading}" Margin="20">
                <ProgressBar
                    Height="20"
                    IsIndeterminate="True"
                    Margin="0,10"
                    ShowProgressText="False"
                    Value="14" />
            </StackPanel>
            <!--  dsds  -->
            <DataGrid
                AutoGenerateColumns="True"
                Grid.Column="1"
                IsReadOnly="True"
                IsVisible="{Binding !IsLoading}"
                ItemsSource="{Binding Customers}"
                SelectedItem="{Binding SelectedCustomer}" />
        </StackPanel>

    </Grid>

</Window>
