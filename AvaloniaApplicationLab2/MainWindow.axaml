<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" d:Background="White"
        x:Class="AvaloniaApplication1.MainWindow"
        Title="Simple C# Greeting Program">
    <!-- Welcome to Avalonia! -->

       <StackPanel Spacing="10" Margin="20">

        <Border Margin="5" CornerRadius="10" Background="LightBlue">
                <TextBlock Margin="5"
                HorizontalAlignment="Center"
                FontSize="24"
                Text="Simple C# Greeting Program">
                </TextBlock>
        </Border>

        <Grid ShowGridLines="True" Margin="5" 
              ColumnDefinitions="150 200"
              RowDefinitions="Auto, Auto">
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="10">What is your name? </TextBlock>
            <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="10 5" Watermark="Enter your name..."/>

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="10">How old are?</TextBlock>
            <TextBox x:Name="AgeTextBox" Grid.Row="1" Grid.Column="1" Margin="10 5" Watermark="Enter your age..."/>
        </Grid>

        <TextBlock 
                x:Name="TextBoxName"
                MinWidth="100"
                MaxWidth="300"
                TextAlignment="Left"
                HorizontalAlignment="Left"
        />

        <TextBlock 
                x:Name="TextBoxAge"
                MinWidth="100"
                MaxWidth="300"
                TextAlignment="Left"
                HorizontalAlignment="Left"
        />

        <Button 
                Content="Greet!"
                Click="Button_Greet"
        />

    </StackPanel>

    
</Window>
